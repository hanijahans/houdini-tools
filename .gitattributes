# Normalize all text to LF
* text=auto eol=lf

# Common text files
*.py    text eol=lf
*.shelf text eol=lf
*.md    text eol=lf
*.json  text eol=lf
*.xml   text eol=lf
*.yml   text eol=lf
*.yaml  text eol=lf
*.txt   text eol=lf

# Binary (not via LFS)
*.png   binary
*.jpg   binary
*.jpeg  binary
*.gif   binary
*.tif   binary
*.tiff  binary
*.hdr   binary
*.rat   binary

# Route large/critical binaries to Git LFS
# .hip, .hipnc, .hiplc
*.hip* filter=lfs diff=lfs merge=lfs -text
*.hda   filter=lfs diff=lfs merge=lfs -text
*.otl   filter=lfs diff=lfs merge=lfs -text
*.bgeo* filter=lfs diff=lfs merge=lfs -text
*.exr   filter=lfs diff=lfs merge=lfs -text
*.mp4   filter=lfs diff=lfs merge=lfs -text
*.ifd   filter=lfs diff=lfs merge=lfs -text
*.sim   filter=lfs diff=lfs merge=lfs -text
*.zip   filter=lfs diff=lfs merge=lfs -text
